#!/bin/zsh
#
# randomcow
# Yannis Chatzimichos / @feedward
#
# Uses ascii art to deliver a MOTD full of wisdom
# 
# Requires:
#
#   Zsh Shell (ldo)
#   cowsay
#   fortune

cows=(`cowsay -l | awk 'BEGIN { ORS=" " } NR > 1 { print $0 }' ; echo`)
randomcow=$[RANDOM%${#cows}+1]

fortune -s wisdom | cowsay -n -f ${cows[randomcow]}

echo
